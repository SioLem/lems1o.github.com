<body>

  <h1>Length Converter</h1>

  <label for="length">Enter length:</label>
  <input type="number" id="length" placeholder="Enter length">

  <label for="conversion-type">Select conversion:</label>
  <select id="conversion-type">
    <option value="meters-to-feet">Meters to Feet</option>
    <option value="feet-to-meters">Feet to Meters</option>
  </select>

  <!-- Calculate button -->
  <button onclick="convertLength()">Convert</button>

  <!-- Result display -->
  <div id="result"></div>
  <script>
    function convertLength() {
      var length = parseFloat(document.getElementById("length").value) || 0;
      var conversionType = document.getElementById("conversion-type").value;

      if (conversionType === "meters-to-feet") {
        var feet = length * 3.28084;
        document.getElementById("result").innerHTML = length + " meters is " + feet.toFixed(2) + " feet.";
      } else if (conversionType === "feet-to-meters") {
        var meters = length / 3.28084;
        document.getElementById("result").innerHTML = length + " feet is " + meters.toFixed(2) + " meters.";
      }
    }
  </script>
